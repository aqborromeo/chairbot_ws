<?xml version="1.0"?>
<launch>
  <!-- Arguments for spawning multiple robots -->
  <arg name="robot1_namespace" value="robot1"/>
  <arg name="robot2_namespace" value="robot2"/>
  <arg name="robot3_namespace" value="robot3"/>

  <arg name="robot1_initial_pose_x" default="0.76"/>
  <arg name="robot1_initial_pose_y" default="6.48"/>
  <arg name="robot1_initial_pose_z" default="-0.001"/>
  <arg name="robot1_initial_pose_yaw" default="0.05"/>
  
  <arg name="robot2_initial_pose_x" default="8.28"/>
  <arg name="robot2_initial_pose_y" default="6.40"/>
  <arg name="robot2_initial_pose_z" default="-0.001"/>
  <arg name="robot2_initial_pose_yaw" default="-0.0"/>

  <arg name="robot3_initial_pose_x" default="7.99"/>
  <arg name="robot3_initial_pose_y" default="8.82"/>
  <arg name="robot3_initial_pose_z" default="-0.001"/>
  <arg name="robot3_initial_pose_yaw" default="0.97"/>
  
  <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find chairbot_navigation)/worlds/office2.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include> -->


  <!-- Spawn first Chairbot -->
  <group ns="robot1">
    <param name="tf_prefix" value="$(arg robot1_namespace)_tf"/>

    <!-- Load URDF -->
    <param name="$(arg robot1_namespace)/robot_description" command="$(find xacro)/xacro $(find chairbot_simulation)/urdf/turtlebot3_waffle_pi.urdf.xacro"/>
    
    <!-- Spawn robot in Gazebo -->
    <include file="$(find chairbot_simulation)/launch/spawn_model.launch">
      <!-- <arg name="robot1_namespace" value="robot1"/> -->
      <arg name="urdf_param" value="$(arg robot1_namespace)/robot_description"/>
      <arg name="model" value="turtlebot3_waffle_pi"/>
      <arg name="x" value="$(arg robot1_initial_pose_x)"/>
      <arg name="y" value="$(arg robot1_initial_pose_y)"/>
      <arg name="z" value="$(arg robot1_initial_pose_z)"/>
      <arg name="Y" value="$(arg robot1_initial_pose_yaw)"/>
    </include>
    
    <!-- Run Gazebo for the first Chairbot -->
    <include file="$(find chairbot_simulation)/worlds/office2.world"/>
    
  </group>

  <!-- Spawn second Chairbot -->
  <group ns="robot2">
    <param name="tf_prefix" value="$(arg robot2_namespace)_tf"/>
    
    <!-- Load URDF -->
    <param name="$(arg robot2_namespace)/robot_description" command="$(find xacro)/xacro $(find chairbot_simulation)/urdf/turtlebot3_waffle_pi.urdf.xacro"/>

    <!-- Spawn robot in Gazebo -->
    <include file="$(find chairbot_simulation)/launch/spawn_model.launch">
      <!-- <arg name="robot2_namespace" value="robot2"/> -->
      <arg name="urdf_param" value="$(arg robot2_namespace)/robot_description"/>
      <arg name="model" value="turtlebot3_waffle_pi"/>
      <arg name="x" value="$(arg robot2_initial_pose_x)"/>
      <arg name="y" value="$(arg robot2_initial_pose_y)"/>
      <arg name="z" value="$(arg robot2_initial_pose_z)"/>
      <arg name="Y" value="$(arg robot2_initial_pose_yaw)"/>
    </include>
    
    <!-- Run Gazebo for the second Chairbot -->
    <include file="$(find chairbot_simulation)/worlds/office2.world"/>
  </group>

  <!-- Spawn third Chairbot -->
  <group ns="robot3">
    <param name="tf_prefix" value="$(arg robot3_namespace)_tf"/>
    
    <!-- Load URDF -->
    <param name="$(arg robot3_namespace)/robot_description" command="$(find xacro)/xacro $(find chairbot_simulation)/urdf/turtlebot3_waffle_pi.urdf.xacro"/>

    <!-- Spawn robot in Gazebo -->
    <include file="$(find chairbot_simulation)/launch/spawn_model.launch">
      <!-- <arg name="robot3_namespace" value="robot3"/> -->
      <arg name="urdf_param" value="$(arg robot3_namespace)/robot_description"/>
      <arg name="model" value="turtlebot3_waffle_pi"/>
      <arg name="x" value="$(arg robot3_initial_pose_x)"/>
      <arg name="y" value="$(arg robot3_initial_pose_y)"/>
      <arg name="z" value="$(arg robot3_initial_pose_z)"/>
      <arg name="Y" value="$(arg robot3_initial_pose_yaw)"/>
    </include>

    <!-- Run Gazebo for the second Chairbot -->
    <include file="$(find chairbot_simulation)/worlds/office2.world"/>

  </group>

</launch>