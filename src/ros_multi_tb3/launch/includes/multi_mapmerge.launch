<!--launch map merging features -->
<launch>
    <arg name="model" default="waffle_pi" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="move_forward_only" default="false"/>
  
    <!-- define for the turtlebot environment -->
    <arg name="tb3_1"  default="tb3_1"/>
    <arg name="tb3_2" default="tb3_2"/>

    <arg name="tb3_0_x_pos" default="7"/>
    <arg name="tb3_0_y_pos" default=" -10"/>
    <arg name="tb3_0_z_pos" default=" 0.0"/>
    <arg name="tb3_0_yaw"   default=" 0.0"/>

    <arg name="tb3_1_x_pos" default="-3"/>
    <arg name="tb3_1_y_pos" default="9"/>
    <arg name="tb3_1_z_pos" default=" 0.0"/>
    <arg name="tb3_1_yaw"   default=" 0.0"/>

    <arg name="tb3_2_x_pos" default="7"/>
    <arg name="tb3_2_y_pos" default=" -10"/>
    <arg name="tb3_2_z_pos" default=" 0.0"/>
    <arg name="tb3_2_yaw"   default=" 0.0"/>
  

  <!-- Map megring (know inital position case)-->
  <group ns="/$(arg tb3_1)/map_merge">
    <param name="init_pose_x" value="$(arg tb3_1_x_pos)"/>
    <param name="init_pose_y" value="$(arg tb3_1_y_pos)"/>
    <param name="init_pose_z" value="$(arg tb3_1_z_pos)"/>
    <param name="init_pose_yaw" value="$(arg tb3_1_yaw)"/>
  </group>
  <group ns="/$(arg tb3_2)/map_merge">
    <param name="init_pose_x" value="$(arg tb3_2_x_pos)"/>
    <param name="init_pose_y" value="$(arg tb3_2_y_pos)"/>
    <param name="init_pose_z" value="$(arg tb3_2_z_pos)"/>
    <param name="init_pose_yaw" value="$(arg tb3_2_yaw)"/>
  </group>


    <!-- Launch the map_merge node along with transform publishers -->
    <!-- <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen"> -->
    <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge">
      <param name="robot_map_topic" value="/map"/>
      <param name="robot_namespace" value="tb3"/>
      <param name="merged_map_topic" value="/map"/>
      <param name="world_frame" value="world"/>
      <param name="known_init_poses" value="true"/>
      <param name="merging_rate" value="3.0"/>
      <!-- <param name="merging_rate" value="0.1"/> -->
      <param name="discovery_rate" value="0.02"/>
      <param name="estimation_rate" value="0.6"/>
      <param name="estimation_confidence" value="0.6"/>
  </node>
  


</launch>
