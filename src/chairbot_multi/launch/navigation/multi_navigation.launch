<launch>
  <param name="/use_sim_time" value="true"/>

  <arg name="open_rviz" default="true"/>

  <arg name="map_file" default="$(find chairbot_multi)/maps/office_map2.yaml"/>


  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" >
    <param name="frame_id" value="map" />
  </node>

  <!-- AMCL      -->
  <group ns="tb3_0">
    <param name="tf_prefix" value="tb3_0" />
    
    <include file="$(find chairbot_multi)/launch/navigation/amcl.launch">
      <arg name="tf_prefix" value="tb3_0"/>
      <arg name="initial_pose_x" value="1.22"/>
      <arg name="initial_pose_y" value="6.03"/>
      <arg name="initial_pose_a" value="0.00"/>
    </include>
    <include file="$(find chairbot_multi)/launch/navigation/move_base.launch">
      <arg name="tf_prefix" value="tb3_0"/>
    </include>
  </group>

  <group ns="tb3_1">
    <param name="tf_prefix" value="tb3_1" />
    
    <include file="$(find chairbot_multi)/launch/navigation/amcl.launch">
      <arg name="tf_prefix" value="tb3_1"/>
      <arg name="initial_pose_x" value="8.28"/>
      <arg name="initial_pose_y" value="6.40"/>
      <arg name="initial_pose_a" value="-0.01"/>
    </include>
    <include file="$(find chairbot_multi)/launch/navigation/move_base.launch">
      <arg name="tf_prefix" value="tb3_1"/>
    </include>  
  </group>

  <group ns="tb3_2">  
    <param name="tf_prefix" value="tb3_2" />

    <include file="$(find chairbot_multi)/launch/navigation/amcl.launch">
      <arg name="tf_prefix" value="tb3_2"/>
      <arg name="initial_pose_x" value="7.99"/>
      <arg name="initial_pose_y" value="8.82"/>
      <arg name="initial_pose_a" value="0.97"/>
    </include>
    <include file="$(find chairbot_multi)/launch/navigation/move_base.launch">
      <arg name="tf_prefix" value="tb3_2"/>
    </include>  
  </group>

  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
      args="-d $(find chairbot_navigation)/rviz/chairbot_navigation.rviz"/>
  </group>
</launch>