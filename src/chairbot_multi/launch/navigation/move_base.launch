<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="tf_prefix" default=""/>
  <arg name="cmd_vel_topic" default="cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find chairbot_multi)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find chairbot_multi)/param/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find chairbot_multi)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find chairbot_multi)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find chairbot_multi)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find chairbot_multi)/param/dwa_local_planner_params_$(arg model).yaml" command="load" />

    <!-- Remap topics --> 
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
    
    <!-- Add tf_prefix to frame_ids -->
    <param name="global_costmap/global_frame" value="map"/>
    <param name="global_costmap/robot_base_frame" value="$(arg tf_prefix)/base_footprint"/>
    <param name="local_costmap/global_frame" value="$(arg tf_prefix)/odom"/>
    <param name="local_costmap/robot_base_frame" value="$(arg tf_prefix)/base_footprint"/>
    <param name="DWAPlannerROS/global_frame_id" value="map"/>
  </node>
</launch>