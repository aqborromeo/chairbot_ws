<launch>
  <!-- No namespace here as we will share this description. 
       Access with slash at the beginning -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find chairbot_multi)/maps/office_map2.yaml"/>

  <param name="robot_description" command="$(find xacro)/xacro $(find chairbot_simulation)/urdf/turtlebot3_$(arg model).urdf.xacro" />

   <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="map"/>
  </node>

  <!-- BEGIN ROBOT 1-->
  <group ns="tb3_0">
    <param name="tf_prefix" value="tb3_0" />
    
    <include file="$(find chairbot_multi)/launch/one_robot.launch" >
      <arg name="robot_name"  value="tb3_0" />
      <arg name="initial_pose_x" value="1.22"/>
      <arg name="initial_pose_y" value="6.03"/>
      <arg name="initial_pose_a" value="0.00"/>
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="tb3_1">
    <param name="tf_prefix" value="tb3_1" />
    <include file="$(find chairbot_multi)/launch/one_robot.launch" >
      <arg name="robot_name"  value="tb3_1" />
      <arg name="initial_pose_x" value="8.28"/>
      <arg name="initial_pose_y" value="6.40"/>
      <arg name="initial_pose_a" value="-0.01"/>
    </include>
  </group>

  <!-- BEGIN ROBOT 3-->
  <group ns="tb3_2">
    <param name="tf_prefix" value="tb3_2" />
    <include file="$(find chairbot_multi)/launch/one_robot.launch" >
      <arg name="robot_name"  value="tb3_2" />
      <arg name="initial_pose_x" value="7.99"/>
      <arg name="initial_pose_y" value="8.82"/>
      <arg name="initial_pose_a" value="0.97"/>
    </include>
  </group>

  <!-- Run path planning -->
  <!-- <node name="path_planning" pkg="chairbot_path_planning" type="path_planning.py" output="screen">
  </node> -->
</launch>